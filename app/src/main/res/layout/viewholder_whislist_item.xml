<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="3dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgFoodInWL"
            android:layout_width="123dp"
            android:layout_height="96dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvTitleInWL"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="30dp"
            android:text="Title"
            android:textStyle="bold"
            android:textSize="18dp"
            android:singleLine="true"
            android:textColor="@color/blue_gray"
            app:layout_constraintStart_toEndOf="@+id/imgFoodInWL"
            app:layout_constraintTop_toTopOf="@+id/imgFoodInWL" />

        <TextView
            android:id="@+id/tvPriceInWL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="$300"
            android:textColor="@color/blue_gray"
            app:layout_constraintStart_toStartOf="@+id/tvTitleInWL"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleInWL" />

        <TextView
            android:id="@+id/tvStartInWL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="4.5"
            android:textColor="@color/blue_gray"
            app:layout_constraintStart_toStartOf="@+id/tvTitleInWL"
            app:layout_constraintTop_toBottomOf="@+id/tvPriceInWL" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvStartInWL"
            app:layout_constraintStart_toEndOf="@+id/tvStartInWL"
            app:layout_constraintTop_toTopOf="@+id/tvStartInWL"
            app:srcCompat="@drawable/star" />

        <ImageView
            android:id="@+id/btRemove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_remove" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>