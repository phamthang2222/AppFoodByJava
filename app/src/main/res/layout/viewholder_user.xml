<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:layout_margin="16dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/imgavt" />

        <View
            android:id="@+id/view5"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/blue_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView15"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvUserName4124"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Nguyễn Văn A"
            android:textColor="@color/blue_gray"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/view5"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvEmailUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Email: null"
            android:textColor="@color/blue_gray"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@+id/tvUserName4124"
            app:layout_constraintTop_toBottomOf="@+id/tvUserName4124" />
         />

        <TextView
            android:id="@+id/tvPassWordUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Mật khẩu: null"
            android:textColor="@color/blue_gray"
            android:textSize="20dp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="@+id/tvEmailUser"
            app:layout_constraintTop_toBottomOf="@+id/tvEmailUser" />
        />

        <TextView
            android:id="@+id/tvPhoneNumberUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="SĐT: null"
            android:textColor="@color/blue_gray"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@+id/tvPassWordUser"
            app:layout_constraintTop_toBottomOf="@+id/tvPassWordUser" />
        />
        <TextView
            android:id="@+id/tvCreatedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Ngày tạo: null"
            android:textColor="@color/blue_gray"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@+id/tvPhoneNumberUser"
            app:layout_constraintTop_toBottomOf="@+id/tvPhoneNumberUser" />
        />
        <TextView
            android:id="@+id/tvAddressUser"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:text="Địa chỉ: null"
            android:textColor="@color/blue_gray"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@+id/tvCreatedDate"
            app:layout_constraintTop_toBottomOf="@+id/tvCreatedDate" />
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>